<div class="container-fluid">
	<div id="ingredientModule" class="col-md-6 border">
		<h2 class="ingredientsModuleTitle">Ingredients</h2>
		<ul id="ingredients">
				<li class=ingredientsHeader>
					<h3 class="name-col">Name</h3>
					<h3 class="abv-col">ABV</h3>
					<h3 class="volume-col">Volume</h3>
					<h3 class="unit-col">Unit</h3>
				</li>

			<div class="additionalIngredients">
				<%= form_tag "/recipe", remote: true, method: 'GET' do%>
					<%= text_field_tag "recipe[name]", nil, class: "recipeName" %>
					<% 3.times do%>
						<%= render 'ingredient_form' %>
					<%end%>
					<div class="ingredientsOptions">
						<%= radio_button_tag "recipe[method]", "stirred", class: "radio-inline" %>
						<%= label_tag "stirred", "Stirred" %>
						<%= radio_button_tag "recipe[method]", "shaken", class: "radio-inline" %>
						<%= label_tag "shaken", "Shaken" %>
						<%= radio_button_tag "recipe[method]", "built", class: "radio-inline" %>
						<%= label_tag "built", "Built" %>
						<%= radio_button_tag "recipe[method]", "carbonated", class: "radio-inline" %>
						<%= label_tag "carbonated", "Carbonated" %>
						<%=submit_tag "Calculate", class: "btn btn-primary calculateButton"%>
					</div>
				<%end%>

			</div>

			<button class="btn btn-success" id="addIngredientButton">+</button>
		</ul>

		<div class="ingredientsOptions">
		    <label class="radio-inline">
		      	<input type="radio" name="buildMethod">Stirred
		    </label>
		    <label class="radio-inline">
		      	<input type="radio" name="buildMethod">Shaken
		    </label>
		    <label class="radio-inline">
		      	<input type="radio" name="buildMethod">Built
		    </label>
		    <label class="radio-inline">
		      	<input type="radio" name="buildMethod">Carbonated
		    </label>
			<label class="checkbox-inline autoDiluteCheck">
				<input type="checkbox" name="autoDilute">Auto-Dilute
			</label>		
		</div>

		<div class="ingredientsControls">
			<button class="btn btn-primary resetButton">
				Reset
			</button>
			<button class="btn btn-primary calculateButton">
				Calculate
			</button>
		</div> 
	</div>
	<div id="statsModule" class="col-md-6 border">
		<h1>Stats</h1>
	</div>
	<div id="batchesModule" class="col-md-6 border">
		<h1>Batches</h1>
	</div>
	<div id="recipeModule" class="col-md-6 border">
		<h1>Recipe</h1>
	</div>
</div>


